.cart_cotent{
  padding-bottom: 90rpx;
}
.cart_cotent .cart_title{
  padding: 20rpx;
  font-size: 36rpx;
  color: skyblue;
  border-top: 1rpx solid skyblue;
  border-bottom: 1rpx solid skyblue;
}
.cart_cotent .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_cotent .cart_main .cart_item .cart_img_wrap{
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart_cotent .cart_main .cart_item .cart_img_wrap image{
  width: 80%;
}
.cart_cotent .cart_main .cart_item .cart_info_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_cotent .cart_main .cart_item .cart_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_cotent .cart_main .cart_item .cart_info_wrap .goods_price_wrap{
  display: flex;
  justify-content: space-between;
}
.cart_cotent .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price{
  color: red;
  font-size: 34rpx;
}
.cart_cotent .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool{
  display: flex;
}
.cart_cotent .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .num_edit{
  display: flex;
  width: 55rpx;
  height: 55rpx;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart_cotent .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num{
  display: flex;
  width: 55rpx;
  height: 55rpx;
  justify-content: center;
  align-items: center;
}
.foot_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
  border: 1rpx solid #ccc;
}
.btn{
  font-size: 28rpx;
  border: 1rpx solid #ccc;
  padding: 10rpx;
  border-radius: 20rpx;
  margin: 0 10rpx;
}