<!-- 购物车内容 -->
<view class="cart_cotent">
  <view class="cart_title">购物车
  <navigator wx:if="{{login===0}}" url="/pages/login/index?isTabBar=1&url=/pages/cart/index">点击登录</navigator>
  </view>
  
  <view class="cart_main">
    <block wx:if="{{cart.length===0}}">
      <image src="../../imgs/cartNone.gif" mode="widthFix"/>
    </block>
    <block wx:else>
      <view class="cart_item" wx:for="{{cart}}" wx:for-item="item">
        <navigator class="cart_img_wrap" url="/pages/goodsInfo/index?id={{item.id}}">
          <image src="{{item.url}}" style="height: 150rpx;"/>
        </navigator>
        <view class="cart_info_wrap">
          <view class="goods_name">{{item.name}}</view>
          <view class="goods_price_wrap ">
            <view class="goods_price">￥{{item.price}}</view>
            <view class="cart_num_tool">
              <view class="num_edit" bindtap="handleItemNumEdit" data-id="{{item.cartId}}" data-operation="{{-1}}">-</view>
              <view class="goods_num">{{item.number}}</view>
              <view class="num_edit" bindtap="handleItemNumEdit" data-id="{{item.cartId}}" data-operation="{{1}}">+</view>
            </view>
          </view>
        </view>
      </view>
    </block>
    
  </view>
</view>
<!-- 底部工具栏 -->
<view class="foot_tool">
  <view class="total_price_wrap">
    合计:<text class="total_price_text">￥{{totalPrice}}</text>
    <text style="margin-left: 30rpx;">(包含运费)</text>
    <view>
      共<text style="margin-left: 10rpx; margin-right: 10rpx; color: orange;">{{totalNum}}</text>件
    </view>
  </view>
  <view class="order_pay_wrap" bindtap="handlePay">
    提交订单
  </view>
</view>